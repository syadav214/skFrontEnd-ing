{
  "name": "exploring-wasm",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@assemblyscript/loader": "^0.17.12",
    "@wasmer/wasi": "^0.12.0",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "react-scripts": "3.1.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "npm run compileTS && npm run compileCPP && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "compileTS": "asc tsFiles/mathUtils.ts -b public/wasm/mathUtils.wasm",
    "compileCPP": "emcc cppFiles/mathUtils.cpp -s STANDALONE_WASM -o public/wasm/mathUtilsCpp.wasm --no-entry"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "assemblyscript": "^0.17.12"
  }
}
